    </apex:outputPanel>

    <apex:outputPanel layout="none" rendered="{!!$Setup.ScorecardSettings__c.Local_Mode__c}">
      <script type="text/javascript" src="{!URLFOR($Resource.manager, '/manager/scripts/app.js')}"></script>
    </apex:outputPanel>

